modules = ["bash"]
run = "./gradlew bootRun"

[nix]
channel = "stable-24_05"

[deployment]
run = [
  "sh",
  "-c",
  "unzip -o build/distributions/kotlin-compiler-server-2.0.20-SNAPSHOT.zip && ./kotlin-compiler-server-2.0.20-SNAPSHOT/bin/kotlin-compiler-server",
]
deploymentTarget = "gce"
build = ["sh", "-c", "./gradlew distZip --no-daemon"]

[[ports]]
localPort = 8080
externalPort = 80
